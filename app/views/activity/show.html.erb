<h1 align="center">활동자랑대회</h1><br>

<p align="center">
제목:<%= @act.title %> <br>
</p>

<p align="center">
내용:<%= @act.content %> <br> <br>

<p align="center">
 <img src="<%= @act.image.url %>" onerror="this.style.display='none'" width="300px" height="200px"> <br>
</p><br>
</p>

<div align="center">
 <% if can? :update, @act %>
   <form class="form-inline" role="form" action="/activity/edit/<%= @act.id %>" style="display:inline-block"> 
     <fieldset style = "width:200" >
       <input class="form-control" type="submit" value="수정">&nbsp &nbsp
     </fieldset>
   </form> 
   <% end %>
 
 <% if can? :destroy, @act %>
   <form class="form-inline" role="form" action="/activity/destroy/<%= @act.id %>" method="post" style="display:inline-block"> 
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
     <fieldset style = "width:200" >
       <input class="form-control" type="submit" value="삭제">
  </fieldset>
 </form> 
 <% end %>
</div>



