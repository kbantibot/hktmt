<html>
    <head>
        <title>Calculator - Gheorghe Marin Adrian</title>
    </head>
    <body>
        <div id='calc-contain'>
  
          <form class="form-inline" role="form"  name="calculator">
            
            <fieldset style = "width:150"> 
            
            <input class="form-control" type="text" name="answer" />
            <br>
            
            <input class="form-control" type="button" value=" 1 " onclick="calculator.answer.value += '1'" />
            <input class="form-control" type="button" value=" 2 " onclick="calculator.answer.value += '2'" />
            <input class="form-control" type="button" value=" 3 " onclick="calculator.answer.value += '3'" />
            <input class="form-control" type="button" value=" + " onclick="calculator.answer.value += '+'" />
            <br/>
            
            <input class="form-control" type="button" value=" 4 " onclick="calculator.answer.value += '4'" />
            <input class="form-control" type="button" value=" 5 " onclick="calculator.answer.value += '5'" />
            <input class="form-control" type="button" value=" 6 " onclick="calculator.answer.value += '6'" />
            <input class="form-control" type="button" value=" - " onclick="calculator.answer.value += '-'" />
            </br>
          
            <input class="form-control" type="button" value=" 7 " onclick="calculator.answer.value += '7'" />
            <input class="form-control" type="button" value=" 8 " onclick="calculator.answer.value += '8'" />
            <input class="form-control" type="button" value=" 9 " onclick="calculator.answer.value += '9'" />
            <input class="form-control" type="button" value=" x " onclick="calculator.answer.value += '*'" />
            </br>
        
            <input class="form-control" type="button" value=" c " onclick="calculator.answer.value = ''" />
            <input class="form-control" type="button" value=" 0 " onclick="calculator.answer.value += '0'" />
            <input class="form-control" type="button" value=" = " onclick="calculator.answer.value = eval(calculator.answer.value)" />
            <input class="form-control" type="button" value=" / " onclick="calculator.answer.value += '/'" />
            </br>
  
            </fieldset>
          </form>
          <div id="agh">
            <p>Adrian Gheorghe Calc
          </div>
        </div>
    </body>
</html>