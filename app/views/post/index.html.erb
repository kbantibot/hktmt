<link href="https://fonts.googleapis.com/css?family=Jua" rel="stylesheet">
<img id="pic1" src="/assets/main2.jpg">
<img id="pic3" src="/assets/main1.jpg">
<p id="main">
  <button type="button" class="btn btn-outline-danger" onclick="location.href='/post/new'">엠티만들기</button> &nbsp&nbsp&nbsp 
  <button type="button" class="btn btn-outline-danger" onclick="location.href='/note/index'">다른 사람들의 MT는?</button> &nbsp&nbsp&nbsp 
  <button type="button" class="btn btn-outline-danger" onclick="location.href='/post/etc'">부가기능</button>
</p>


    <% @posts.each do |p|%>
    
    <% if current_user.id == p.user_id %>
      

    <table>
      <thead>
        <tr>
          <th width=80 style="word-break:break-all">엠티 이름</th>
          <th width=80 style="word-break:break-all"><%= p.title %></th> 
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>엠티 설명</td>
          <td><%= p.content %></td>
        </tr>
        <tr>
          <td colspan="2">
          <%= p.date %> 박 <%= (p.date + 1) %>일
          <a href="/post/index/<%= p.id%>/place/index">[장소]</a>
          <a href="/post/time/<%= p.id %>">[시간표 짜러가기]</a>
          <a href="/post/calu/<%= p.id %>">[음식/술 계산기]</a>
          <a href="/post/lshow/<%= p.id %>">[총정리 보러가기]</a>
          <a href="/post/edit/<%= p.id %>">[수정]</a>
          <form class="form-inline" role="form" action="/post/destroy/<%= p.id %>" method="post">

             <fieldset style = "width:200" >
               <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <input class="form-control" type="submit" value="삭제">

             </fieldset>
          </form>
          </td>
        </tr>
      </tbody>
    </table><br>
    <% end %>
          
<% end %>
<script>
$(document).ready(function(){
    $("#pic1").click(function(){
        $("#pic1").animate({
            height: 'toggle'
        });
        $("#pic1").animate({
            height: 'toggle'
        });
    });
});
</script>